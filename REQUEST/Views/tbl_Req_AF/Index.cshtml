@model IEnumerable<REQUEST.Models.View_Req_AF>

@{
    ViewBag.Title = "Index";
}
<center>
    <h2>การขอสิทธิและยกเลิกสิทธิ ALFRESCO</h2>
</center>

<div class="float-right pull-left col-md-4">
    <form class=" navbar-from pull-left" role="search">
        <div class="input-group pull-left">
            @Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Search..." })
            <div class=" input-group-btn">
                <button class=" btn btn-default pull-left" type="submit"><i class=" glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </form>
</div>
<div class="col-md-2 col-sm-6 ">

    @Html.ActionLink(" กรอกข้อมูล ", "Create", "tbl_Req_AF", new { @class = "btn btn-info " })
</div>
<table class="table table-bordered table-hover text-nowrap fixed">
    <thead class="headTable" style="background-color: #82CAFA" >
        <tr>
            <th></th>
            <th><center>เลขเอกสาร</center></th>
            <th><center>รหัสพนักงาน</center></th>
            <th><center>ชื่อ-สกุล</center></th>
            <th><center>สิทธิการใช้งาน</center></th>
            <th><center>สถานะของงาน</center></th>
            <th>วันที่แจ้ง</th>
            <th>Site</th>
            <th>Folder</th>
            <th>สถานะสิทธิ</th>
            <th>รหัสพนักงานผู้แจ้ง</th>
            <th>ชื่อผู้แจ้ง</th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (Session["USER_ROLE"].ToString() == "MANAGER")
                {
                    @Html.ActionLink(" ", "Edit", "tbl_Req_AF", new { id = item.Req_AF_CODE }, new { @class = "btn btn-success btn-sm fa fa-check" })
                }
            </td>

            <td>
                <a href="@Url.Action("Details", "tbl_Req_AF", new { id = item.Req_AF_CODE })" style="color:#0000EE;"> @Html.DisplayFor(modelItem => item.Req_AF_CODE)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.USER_NO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.USER_NAME)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Allow_DESCRIPTION)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.STA_DESCRIPTION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AF_DATE)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AF_Site)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AF_Folder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AF_STATUS_DESC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AF_REQUESTER)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NAME_REQUESTER)
            </td>


        </tr>
    }

</table>
