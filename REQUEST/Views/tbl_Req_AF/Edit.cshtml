                @Html.EditorFor(model => model.AF_APPROVER, new { htmlAttributes = new { @class = "form-control", @Value = Session["USER_NO"].ToString(), @readonly = "true" } })
                @Html.ValidationMessageFor(model => model.AF_APPROVER, "", new { @class = "text-danger" })
            </div>
        </div>

