@model IEnumerable<REQUEST.Models.View_Req_NAV>

@{
    ViewBag.Title = "Index";
}
<center>
    <h2>รายการขอสิทธิและแก้ไขเพิ่มเติมการใช้ระบบ NAV</h2>
</center>

<div class="float-right pull-left col-md-4">
    <form class=" navbar-from pull-right" role="search">
        <div class="input-group pull-left ">
            @Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Search..." })
            <div class=" input-group-btn">
                <button class=" btn btn-default pull-left " type="submit"><i class=" glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </form>
</div>

<input type="button" class="btn btn-info" value="กรอกข้อมูล" onclick="location.href='@Url.Action("Create", "tbl_Req_NAV")'" />

<table class="table table-bordered table-hover text-nowrap fixed">
    <thead class="headTable" style="background-color: #82CAFA">
        <tr>
         <th></th>
            <th>เลขเอกสาร</th>
            <th>รหัสพนักงาน</th>
            <th>ชื่อ-สกุล</th>
            <th>ตำแหน่ง</th>
            <th>ฝ่าย</th>
            <th>เบอร์</th>
            <th>สิทธิการใช้งาน</th>
            <th>สถานะสิทธิ</th>
            <th>เลือกฝ่าย/ส่วน</th>
            <th>รายละเอียดและสิ่งที่ต้องการ</th>
            <th>เอกสารแนบ(ถ้ามี)</th>
            <th>วันที่แจ้ง</th>



           




        </tr>
    </thead>



    @foreach (var item in Model)
    {
<tr>
   
    <td>
        @if (Session["USER_ROLE"].ToString() == "MANAGER")
        {
            @Html.ActionLink(" ", "Edit", "tbl_Req_Nav", new { id = item.Req_NAV_CODE }, new { @class = "btn btn-success btn-sm fa fa-check" })
        }


    </td>
    <td>
        <a href="@Url.Action("Details", "tbl_Req_NAV", new { id = item.Req_NAV_CODE})" style="color:#0000EE;"> @Html.DisplayFor(modelItem => item.Req_NAV_CODE)</a>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.USER_NO)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.USER_NAME)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.PROSITION)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DEPARTMENT)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.USER_EXTENSION)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Allow_DESCRIPTION)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.STA_DESCRIPTION)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SECTION_DESC)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.NAV_Detail)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NAV_DOC)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DATE_NAV)
    </td>




</tr>
    }

</table>
