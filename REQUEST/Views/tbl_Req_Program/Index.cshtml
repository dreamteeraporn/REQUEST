@model IEnumerable<REQUEST.Models.View_Req_PG>

@{
    ViewBag.Title = "Index";
}
<center>
    <h2>รายการขอรับบริการทางด้านโปรแกรมคอมพิวเตอร์</h2>
</center>
<div class="float-right pull-left col-md-4">
    <form class=" navbar-from pull-left" role="search">
        <div class="input-group pull-left">
            @Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Search..." })
            <div class=" input-group-btn">
                <button class=" btn btn-default pull-left" type="submit"><i class=" glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </form>
</div>
<input type="button" class="btn btn-info" value="กรอกข้อมูล" onclick="location.href='@Url.Action("Create", "tbl_Req_Program")'" />

<table class="table table-bordered table-hover text-nowrap fixed">
    <thead class="headTable" style="background-color: #82CAFA">
        <tr>

            <th></th>
            <th>เลขเอกสาร</th>
            <th>วันที่แจ้ง</th>
            <th>รหัสพนักงาน</th>
            <th>สถานะของงาน</th>
            <th>งาน</th>
            <th>ปัญหา</th>
            <th>ความต้องการ</th>
            <th>ความถี่ในการใช้งาน</th>
            <th>ต้องการใช้วันที่</th>
           
           


        </tr>
    </thead>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @if (Session["USER_ROLE"].ToString() == "MANAGER")
        {
            @Html.ActionLink(" ", "Edit", "tbl_Req_Program", new { id = item.Req_PG_CODE }, new { @class = "btn btn-success btn-sm fa fa-check" })
        }
    </td>
    <td>
        <a href="@Url.Action("Details", "tbl_Req_Program", new { id = item.Req_PG_CODE })" style="color:#0000EE;"> @Html.DisplayFor(modelItem => item.Req_PG_CODE)</a>
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.PG_DATE)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.USER_NO)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.STA_DESCRIPTION)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PG_Work)
    </td>


    <td>
        @Html.DisplayFor(modelItem => item.PG_Problem)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.PG_Requirement)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PG_Frequency)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.PG_Date_start)
    </td>




</tr>
    }

</table>
