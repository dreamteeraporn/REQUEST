@model REQUEST.Models.Navi_HR

@{
    ViewBag.Title = "Create";
}

    <center>
        <h2>กรอกข้อมูลการขอรหัสและเปลี่ยนแปลงสิทธิใช้ระบบ Navision HR & Payroll</h2>

    </center>
    <input type="button" class="btn btn-info" value="กลับไปหน้ารายการ" onclick="location.href='@Url.Action("Index", "tbl_Req_Navi_HR")'" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.REQ_STATUS, "สถานะของงาน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.REQ_STATUS, new { htmlAttributes = new { @class = "form-control", @Value = "01", @readonly = "true" } })
            @Html.ValidationMessageFor(model => model.REQ_STATUS, "หมายเหตุ 01  ลงทะเบียน ", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Allow_STATUS, "สิทธิการใช้งาน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">

            @Html.DropDownListFor(model => model.Allow_STATUS, new List<SelectListItem>
    {

    new SelectListItem{ Text="ขอสิทธิ", Value="01"},
    new SelectListItem { Text="แก้ไขและเพิ่มเติมสิทธิ", Value="02" },
    new SelectListItem { Text="ยกเลิกสิทธิ", Value="03" },
   }, "กรุณาเลือก", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Allow_STATUS, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.USER_NO, "รหัสพนักงาน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.USER_NO, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.USER_NO, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Navi_HR_User_Log_In, "User Log In Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Navi_HR_User_Log_In, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Navi_HR_User_Log_In, "หมายเหตุ ระบุกรณี เพิ่มสิทธิ หรือ ยกเลิกสิทธิ", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Navi_HR_Detail, "วัตถุประสงค์ในการใช้ระบบ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.TextAreaFor(model => model.Navi_HR_Detail, htmlAttributes: new { @class = "form-control", @rows = 5, @cols = 30 })
            @Html.ValidationMessageFor(model => model.Navi_HR_Detail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Navi_HR_REQUESTER, "รหัสพนักงานผู้แจ้ง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Navi_HR_REQUESTER, new { htmlAttributes = new { @class = "form-control", @Value = Session["USER_NO"].ToString(), @readonly = "true" } })
            @Html.ValidationMessageFor(model => model.Navi_HR_REQUESTER, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Navi_HR_REQUESTER_DATE, "วันที่แจ้ง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Navi_HR_REQUESTER_DATE, new { htmlAttributes = new { @class = "form-control",  @Value = DateTime.Now.ToShortDateString(), @readonly = "true"  } })
            @Html.ValidationMessageFor(model => model.Navi_HR_REQUESTER_DATE, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="ยืนยัน" class="btn btn-default" style="background-color:#8cb9e5" />
        </div>
    </div>
</div>
}

