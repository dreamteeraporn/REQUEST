@model REQUEST.Models.SharDrive

@{
    ViewBag.Title = "Create";
}
    <center>
        <h2>กรอกข้อมูลการขอสิทธิและยกเลิกสิทธิรหัสผู้ใช้ เพื่อเข้าสู้ Share Drive</h2>
    </center>

    <input type="button" class="btn btn-info" value="กลับไปหน้ารายการ" onclick="location.href='@Url.Action("Index", "tbl_Req_SharDrive")'" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <div class="form-group">
        @Html.LabelFor(model => model.REQ_STATUS, "สถานะของงาน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.REQ_STATUS, new { htmlAttributes = new { @class = "form-control", @Value = "01", @readonly = "true" } })
            @Html.ValidationMessageFor(model => model.REQ_STATUS, "หมายเหตุ 01  ลงทะเบียน ", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.USER_NO, "รหัสพนักงาน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.USER_NO, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.USER_NO, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Allow_STATUS, "สิทธิการใช้งาน", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">

            @Html.DropDownListFor(model => model.Allow_STATUS, new List<SelectListItem>
    {

    new SelectListItem{ Text="ขอสิทธิ", Value="01"},
    new SelectListItem { Text="แก้ไขและเพิ่มเติมสิทธิ", Value="02" },
    new SelectListItem { Text="ยกเลิกสิทธิ", Value="03" },
   }, "กรุณาเลือก", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Allow_STATUS, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.SD_Drive, "Drive", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.TextAreaFor(model => model.SD_Drive, htmlAttributes: new { @class = "form-control", @rows = 5, @cols = 30 })
            @Html.ValidationMessageFor(model => model.SD_Drive, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SD_Folder, "Folder", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.TextAreaFor(model => model.SD_Folder, htmlAttributes: new { @class = "form-control", @rows = 5, @cols = 30 })
            @Html.ValidationMessageFor(model => model.SD_Folder, "", new { @class = "text-danger" })
        </div>
    </div>
    


    <div class="form-group">
        @Html.LabelFor(model => model.ID_Authen, "สิทธิการเข้าถึง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">

            @Html.DropDownListFor(model => model.ID_Authen, new List<SelectListItem>
    {
    new SelectListItem{ Text="Full", Value="01"},
    new SelectListItem { Text="Change", Value="02" },
    new SelectListItem { Text="Read", Value="03" },
    }, "กรุณาเลือก", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_Authen, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SD_Note, "หมายเหตุ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.TextAreaFor(model => model.SD_Note, htmlAttributes: new { @class = "form-control", @rows = 5, @cols = 30 })
            @Html.ValidationMessageFor(model => model.SD_Note, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SD_REQUESTER, "รหัสพนักงานผู้แจ้ง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.SD_REQUESTER, new { htmlAttributes = new { @class = "form-control", @Value = Session["USER_NO"].ToString(), @readonly = "true" } })
            @Html.ValidationMessageFor(model => model.SD_REQUESTER, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.SD_DATE, "วันที่แจ้ง", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.SD_DATE, new { htmlAttributes = new { @class = "form-control", @Value = DateTime.Now.ToShortDateString(), @readonly = "true" } })
            @Html.ValidationMessageFor(model => model.SD_DATE, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="ยืนยัน" class="btn btn-default" style="background-color:#8cb9e5" />
        </div>
    </div>
</div>
}

